<body class="login">

<div class="logo">
  <a href="#">
    <img src="/assets/logo-big.png" alt=""/>
  </a>
</div>
<div class="content">
  <form class="login-form" action="<%= do_signin_path %>" method="post">
    <h3 class="form-title">Login to your account</h3>
    <div class="alert alert-danger display-hide" id="signin_alert">
      <button class="close" data-close="alert"></button>
			<span>
			Enter any email, password and location. </span>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">Email</label>
      <div class="input-icon">
        <i class="fa fa-envelope"></i>
        <input class="form-control placeholder-no-fix" type="email" autocomplete="off" placeholder="Email" id="signin_email" name="email"/>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">Password</label>
      <div class="input-icon">
        <i class="fa fa-lock"></i>
        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" id="signin_password" name="password"/>
      </div>
    </div>
    <div class="form-group">
      <div class="input-icon">
        <i class="fa fa-map-marker"></i>
        <select class="form-control placeholder-no-fix" name="location" id="signin_location" style="padding-left: 25px;">
          <option value=""> Location</option>
          <option value="Loc1"> Loc1</option>
          <option value="Loc2"> Loc2</option>
          <option value="Loc3"> Loc3</option>
        </select>
      </div>
    </div>
    <div class="form-actions">
      <button type="button" id="signin_button" class="btn blue pull-right">
        Sign In <i class="m-icon-swapright m-icon-white"></i>
      </button>
    </div>
    <div class="create-account">
      <p>
        Don't have an account yet ?&nbsp; <a href="<%= signup_path %>">
        Create an account </a>
      </p>
    </div>
  </form>

</div>

